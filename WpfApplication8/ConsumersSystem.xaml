<Window x:Class="WpfApplication8.ConsumersSystem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication8"
        mc:Ignorable="d"
        Title="ConsumersSystem" Height="350" Width="300">
    <Grid Background="#FFF95221">
        <Label Content="Employee- Insert your Id number:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,93,0,0" Width="217"/>
        <Button Content="Enter!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="139" Margin="66,197,0,0" Height="55" Click="Button_Click"/>
        <Label Content="Enter to the system:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,29,0,0" Height="49" Width="199" FontFamily="Showcard Gothic" FontSize="16"/>
        <TextBox x:Name ="input" HorizontalAlignment="Left" Height="37" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Margin="51,136,0,0" FontSize="14" FontFamily="Showcard Gothic"/>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="116" Margin="77,266,0,0" Height="44" Click="Button_Exit"/>
    </Grid>
</Window>
