<Window x:Class="WpfApplication8.ShowOrdersReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication8"
        mc:Ignorable="d"
        Title="ShowOrdersReport" Height="500" Width="450">

    <Grid Background="#FFE84111" Margin="0,0,-6,-4">
        <DataGrid x:Name="OrdersDataGrid" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" Margin="26,62,0,0" Background="#FFF5EEEE" BorderBrush="#FFF0F4F7" Foreground="#FF2576C7"/>
        <Label Content="Orders Report" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="97,5,0,0" Height="38" Width="232" FontFamily="Segoe UI Black" FontSize="20"/>

    </Grid>
</Window>
